{
  "bin": {
    "{{name}}": "./src/{{name}}-cli.mjs"
  },
  "keywords": [
    "kronos-integration",
    "systemd"
  ],
  "scripts": {},
  "dependencies": {
    "@kronos-integration/service": "^10.4.17"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.3"
  },
  "engines": {
    "node": ">={{node_version}}"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "pkg": {
    "group": "services",
    "hooks": "pkg/hooks.sh",
    "backup": "etc/${name}/config.json",
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/systemd/system/": {
        "base": "systemd"
      },
      "/usr/lib/tmpfiles.d/${name}.conf": "pkg/tmpfiles.conf",
      "/usr/lib/sysusers.d/${name}.conf": "pkg/sysusers.conf",
      "/etc/${name}/config.json": "config/config.json",
      "${installdir}/": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ]
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild"
        }
      ]
    ]
  },
  "template": {
    "properties": {},
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-root",
      "arlac77/template-ava",
      "arlac77/template-pacman#next",
      "arlac77/template-nginx#next",
      "arlac77/template-systemd#next"
    ],
    "usedBy": [
      "arlac77/entitlement-provider",
      "template-tools/template-sync-hook"
      "Kronos-Integration/cluster-node",
      "arlac77/component-manager",
      "arlac77/hook-ci",
      "arlac77/rtsp-archive",
      "arlac77/system-dashboard"
    ]
  }
}
