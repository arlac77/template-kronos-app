{
  "bin": {
    "{{name}}": "src/{{name}}-cli.mjs"
  },
  "keywords": [
    "kronos-integration",
    "systemd"
  ],
  "scripts": {},
  "dependencies": {},
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^5.1.1"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64"
  ],
  "pkgbuild": {
    "content": {
      "${install_dir}": {
        "type": "npm-pack"
      },
      "${install_dir}/node_modules": {
        "type": "node-modules"
      },
      "${systemd_unit_dir}${name}.service": "pkg/${name}.service",
      "${config_dir}config.json": "config/config.json"
    },
    "kronos": true
  },
  "template": {
    "properties": {
      "license": {
        "owner": "darlenya & arlac77"
      }
    },
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-root",
      "arlac77/template-ava",
      "arlac77/template-npm-pkgbuild",
      "arlac77/template-nginx",
      "arlac77/template-systemd",
      "arlac77/template-javascript"
    ],
    "usedBy": [
      "Kronos-Integration/cluster-node",
      "arlac77/component-manager",
      "arlac77/csp-record",
      "arlac77/entitlement-provider",
      "arlac77/hook-ci",
      "arlac77/rtsp-archive",
      "arlac77/system-dashboard",
      "template-tools/template-sync-hook"
    ]
  }
}
